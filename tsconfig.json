{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2018", "es2019"],
    "moduleResolution": "node",
    "types": ["react", "jest"],
    "strict": true,
    "target": "es6",
    "outDir": "./dist",
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  },
  "exclude": [
    "coverage",
    "node_modules",
    "jest.config.js",
    "dist",
    "**/__tests__/*",
    "**/__coverage__/*"
  ]
}